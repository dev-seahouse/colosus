{
  "extends": ["plugin:@nx/react", "../../../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "plugins": ["unused-imports"],
      "rules": {
        "@typescript-eslint/consistent-type-imports": "error",
        "unused-imports/no-unused-imports-ts": 2
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
